<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/drawerLayout_main"
    tools:context=".ControlPanel"
    android:background="@android:color/white">


    <ScrollView
        android:id="@+id/scrollView_main"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <include
                layout="@layout/main_toolbar"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:text="Privacy Policy"
                android:textSize="22dp"
                android:textStyle="bold"/>


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="5dp"
                android:text="Your privacy is of utmost importance to us. This application is committed to respecting and protecting the personal information of its users. The following statements outline our privacy practices and how we handle your personal information. "
                android:textSize="20dp" />


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="10dp"
                android:text="Personal Information Handling"
                android:textSize="22dp"
                android:textStyle="bold"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="5dp"
                android:textSize="20dp"
                android:text="We pledge not to sell, rent, distribute, or trade your personal information to any unrelated third parties without your explicit consent. Furthermore, upon the conclusion of our services, we will ensure that any access to your personal information is terminated. \n\nWe strictly prohibit any third party from collecting, editing, selling, or freely distributing your personal information through any means. Should any user of this application engage in such activities and be discovered, we reserve the right to immediately terminate the service agreement with the offending user." />


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="10dp"
                android:text="Information Disclosure"
                android:textSize="22dp"
                android:textStyle="bold"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="5dp"
                android:textSize="20dp"
                android:text="    1.With your explicit consent to share the information with third parties.    \n    2. When required by law or by a legal process, we may disclose your information to comply with the request of a third party, administrative body, or judicial authority." />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="10dp"
                android:text="Privacy Policy Updates"
                android:textSize="22dp"
                android:textStyle="bold"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="10dp"
                android:text="We reserve the right to modify this privacy policy at any time. Should any changes be made, they will be clearly communicated on this page within the application, as well as in any other places we deem appropriate. This ensures that you are always aware of what information we collect, how we use it, and under what circumstances, if any, it is disclosed."
                android:textSize="20dp" />

        </LinearLayout>
    </ScrollView>

    <RelativeLayout
        android:layout_width="300dp"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:background="@android:color/white">

        <include
            layout="@layout/main_nav_drawer"/>

    </RelativeLayout>

</androidx.drawerlayout.widget.DrawerLayout>